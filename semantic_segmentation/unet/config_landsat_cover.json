{
    "name": "AlbuNet",
    "n_gpu": 1,
    "arch": {
        "type": "AlbuNet",
        "args": {
            "num_channels": 3
        }
    },
    "data_loader_train": {
        "type": "PlanetDataLoader",
        "args":{
            "img_dir": "/mnt/ds3lab-scratch/lming/data/min_quality11/landsat/min_pct",
            "label_dir": "/mnt/ds3lab-scratch/lming/gee_data/z11/forest_cover",
            "batch_size": 16,
            "years": [
                "2013", 
                "2014",
                "2015"
            ],
            "max_dataset_size": "inf",
            "shuffle": true,
            "num_workers": 16
        }
    },

    "data_loader_val": {
        "type": "PlanetDataLoader",
        "args":{
            "img_dir": "/mnt/ds3lab-scratch/lming/data/min_quality11/landsat/min_pct",
            "label_dir": "/mnt/ds3lab-scratch/lming/gee_data/z11/forest_cover",
            "batch_size": 16,
            "years": [
                "2016" 
            ],
            "max_dataset_size": "inf",
            "shuffle": true,
            "num_workers": 16
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0004,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "LossBinary",
        "args":{
            "jaccard_weight": 0
        }
    },
    "metrics": [
        "get_jaccard"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "/mnt/ds3lab-scratch/lming/experiments/pytorch/final/",
        "save_period": 5,
        "verbosity": 2,
        "keep_last" : 15,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
