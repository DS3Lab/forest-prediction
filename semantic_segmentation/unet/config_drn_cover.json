{
    "name": "DSR",
    "n_gpu": 1,
    "arch": {
        "type": "DRNSeg",
        "args": {
            "model_name": "drn-d-38",
            "classes": "1",
            "pretrained": false
        }
    },
    "data_loader_train": {
        "type": "PlanetDataLoader",
        "args":{
            "input_dir": "/mnt/ds3lab-scratch/lming/data/min_quality/planet",
            "label_dir": "/mnt/ds3lab-scratch/lming/data/min_quality/forest_cover",
            "batch_size": 16,
            "years": [
                "2017"
            ],
            "qualities":[
                "no_pct"
            ],
            "timelapse": "annual",
            "max_dataset_size": "inf",
            "shuffle": true,
            "num_workers": 16,
            "training": true,
            "testing": false,
            "quarter_type": "next_year",
            "source": "planet",
            "input_type": "one"
        }
    },
    "data_loader_val": {
        "type": "PlanetDataLoader",
        "args":{
            "input_dir": "/mnt/ds3lab-scratch/lming/data/min_quality/planet",
            "label_dir": "/mnt/ds3lab-scratch/lming/data/min_quality/forest_cover",
            "batch_size": 32,
            "years": [
                "2018"
            ],
            "qualities":[
                "no_pct"
            ],
            "timelapse": "annual",
            "max_dataset_size": "inf",
            "shuffle": false,
            "num_workers": 16,
            "training": false,
            "testing": false,
            "quarter_type": "next_year",
            "source": "planet",
            "input_type": "one"
        }
    },

    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0004,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "LossBinary",
        "args":{
            "jaccard_weight": 0
        }
    },
    "metrics": [
        "get_jaccard"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "/mnt/ds3lab-scratch/lming/experiments/pytorch/tmp/",
        "save_period": 5,
        "verbosity": 2,
        "keep_last" : 15,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
